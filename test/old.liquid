          {%- elsif style_gallery == 'style3' -%}
            <!-- Style 3 -->
            {%- include 'product-gallery-style3' -%}
            <!-- End Style 3 -->
          {%- elsif style_gallery == 'style4' -%}
            <!-- Style 4 -->
            {%- include 'product-gallery-style4' -%}
            <!-- End Style 4 -->
