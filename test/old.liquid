{%- assign splitDescription = product.description | split: '####' -%}
{%- assign sizeDes0 = splitDescription[0] | size -%}
{%- assign sizeDes1 = splitDescription[1] | size -%}

{%- assign discount = product.variants[0].compare_at_price
  | minus: product.variants[0].price
  | divided_by: product.variants[0].compare_at_price
  | times: 100
  | round
-%}
{%- assign percent = product.variants[0].compare_at_price
  | minus: product.variants[0].price
  | divided_by: product.variants[0].compare_at_price
  | times: 100
-%}
{%- if percent > 99 -%}{%- assign discount = 99 -%}{%- endif -%}
{%- if percent < 1 -%}{%- assign discount = 1 -%}{%- endif -%}
{%- assign onSale = false -%}
{%- if percent > 0 and percent < 100 -%}{%- assign onSale = true -%}{%- endif -%}

{%- assign proId = product.id -%}
<div class="main-product {{ style_gallery }}">
  <div class="main-product-breadcrumb" title="{{ product.title }}">
    <div class="container">
      <div hidden class="section-title-all">
        <h1>{{ product.title }}</h1>
      </div>
      {%- include 'shop-breadcrumb' -%}
    </div>
  </div>
  {%- if product.images.size > 0 -%}
    {%- if style_gallery == 'style5' -%}
      <div class="main-product-feature-outside">
        <!-- Style 5 -->
        {%- include 'product-gallery-style5' -%}
      </div>
    {%- endif -%}
  {%- endif -%}
  <div class="container">
    <!-- Flash Sale -->
    {%- if settings.shop_shopping_status -%}
      {%- for collection in product.collections -%}
        {%- if collection.handle == collections[settings.home_flashsale_collection].handle -%}
          <div class="productFSale">
            <img
              loading="lazy"
              decoding="async"
              src="https://file.hstatic.net/200000306687/file/ezgif.com-gif-maker_40e5c36d115b4904babbebc78c90c34e.gif"
              alt="productFSale"
            >
            <div data-time="{{ settings.home_fsale_time }}" class="countdownLoop"></div>
            <a
              href="{{ collection.url }}"
              aria-label="Xem toàn bộ sản phẩm Flash Sale"
              title="Xem toàn bộ sản phẩm Flash Sale"
              >Xem toàn bộ sản phẩm Flash Sale</a
            >
          </div>
          {%- break -%}
        {%- endif -%}
      {%- endfor -%}
    {%- endif -%}
    <!-- End Flash Sale -->
    <div class="main-product-wrap">
      <div class="main-product-left main-product-feature" data-style="{{ style_gallery }}">
        {%- if product.images.size > 0 -%}
