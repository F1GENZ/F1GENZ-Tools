        <h1 class="main-product-title {% unless settings.main_product_share_check %}noShare{% endunless %}">
          {{ product.title }}
        </h1>

        {%- assign quanban = 0 -%}
        {%- for tag in product.tags -%}
          {%- if tag contains 'dabanra_' -%}
            {%- assign this_qty = tag | remove: 'dabanra_' | times: 1 -%}
            {%- assign quanban = quanban | plus: this_qty -%}
          {%- endif -%}
        {%- endfor -%}

        <div class="flexquanflz">
          <div
            class="starbaprv-widget starbaprv-preview-badge starbaprv-preview-badge--with-link"
            data-id="{{product.id}}"
            data-url="{{product.handle}}"
          >
            {% if product.metafields.starbap['starbaprv.badge'] %}
              {{ product.metafields.starbap['starbaprv.badge'] }}
            {% endif %}
          </div>

          <div class="product-sold" style="">Đã bán: {{ product.sold_quantity | plus: quanban }}</div>
        </div>

        {% include 'salea' %}

        <div class="main-product-info">
          <div class="main-product-info-vendor">
            <strong>Thương hiệu: </strong>
            <span>
              {%- if product.vendor != null and product.vendor != '' -%}
                {{ product.vendor }}
              {%- else -%}
                Đang cập nhật
              {%- endif -%}
            </span>
          </div>
          <div class="main-product-info-type">
            <strong>Dòng sản phẩm: </strong>
            <span>
              {%- if product.type != null and product.type != '' -%}
                {{ product.type }}
              {%- else -%}
                Đang cập nhật
              {%- endif -%}
            </span>
          </div>
          {%- for tag in product.tags -%}
            {%- if tag contains 'label_' -%}
              <div class="main-product-info-tag">
                {%- if tag contains ':' -%}
                  {%- assign tagRemove = tag | remove: 'label_' -%}
                  {%- assign tagSplit = tagRemove | split: ':' -%}
                  <strong>{{ tagSplit[0] }}:</strong>
                  <span>{{ tagSplit[1] }}</span>
                {%- else -%}
                  <span>{{ tagRemove }}</span>
                {%- endif -%}
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
        {%- if settings.shop_shopping_status -%}
          <div class="main-product-price">
            <div class="main-product-price-wrap">
              <del
                {% unless onSale %}
                  hidden
                {% endunless %}
                class="main-product-price-compare"
              >
                {{- product.variants.first.compare_at_price | money -}}
              </del>

              {%- if product.variants.first.price != 0 -%}
                <span class="main-product-price-this">{{ product.variants.first.price | money }}</span>
              {%- else -%}
                <span class="main-product-price-this contact">
                  <strong>{{ settings.main_product_price_contact_text }}</strong>
                </span>
              {%- endif -%}

              <span
                {% unless onSale %}
                  hidden
                {% endunless %}
                class="main-product-price-discount"
                >Tiết kiệm {{ discount }}%</span
              >
            </div>
          </div>
          {%- assign shortDescFromProductTab = '' -%}
          {%- assign tabs = product.metafields.hrvptabs.tabs -%}
          {%- if tabs and tabs != blank -%}
            {%- assign tabList = tabs | append: '' | split: '@@###@@' -%}
            {%- for tab in tabList limit: 1 -%}
              {%- assign shortDescFromProductTab = tab | split: '@@##@@' | last -%}
            {%- endfor -%}
          {%- endif -%}
          {%- if shortDescFromProductTab != blank -%}
            <div class="main-product-short-description">
              {{
                shortDescFromProductTab
                | replace: 'div', 'p'
                | replace: 'src', 'class="w-auto" loading="lazy" decoding="async" src'
              }}
            </div>
          {%- endif -%}
          <div class="d-none">
            <select id="main-product-select" name="id">
              {%- for variant in product.variants -%}
                <option value="{{ variant.id }}">{{ variant.title }}</option>
              {%- endfor -%}
            </select>
          </div>
          <div class="main-product-swatch">
            {%- if product.variants.size >= 1 -%}
              {%- include 'swatch' -%}
            {%- endif -%}
          </div>
          <div class="main-product-quantity shop-quantity-wrap">
            <label>Số lượng</label>
            <div class="shop-quantity">
              <button type="button" data-type="shop-quantity-minus" title="Giảm">-</button>
              <input type="number" name="quantity" value="1" min="1" readonly>
              <button type="button" data-type="shop-quantity-plus" title="Tăng">+</button>
            </div>
          </div>

          <div class="main-product-coupon">
            {%- if settings.shop_coupon_check -%}
              <div class="shop-coupon">
                <label
                  >Voucher ưu đãi:
                  <img
                    class="lazyload"
                    src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII="
                    data-src="https://bizweb.dktcdn.net/100/453/837/files/757cf2944edb87314287b95cd98fd731-1.gif?v=1654078396653"
                    alt="coupon"
                ></label>
                <ul>
                  {%- for i in (1..3) -%}
                    {%- capture check -%}shop_coupon_item_check_{{ i }}{%- endcapture -%}
                    {%- capture image -%}shop_coupon_item_image_{{ i }}.png{%- endcapture -%}
                    {%- if settings[check] -%}
                      <li class="shop-coupon-modal" data-fancybox data-src="#shop-coupon-popup">
                        <img
                          class="lazyload"
                          src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII="
                          data-src="{{ image | asset_url }}"
                          alt="cusPro-coupon-{{ i }}"
                        >
                      </li>
                    {%- endif -%}
                  {%- endfor -%}
                </ul>
              </div>
            {%- endif -%}
          </div>

          <div class="main-product-freeship">
            {%- include 'shop-freeship' -%}
          </div>
          <div class="main-product-cta">
            {%- if product.first_available_variant.price != 0 and product.available -%}
              <button type="button" data-type="main-product-add" title="Thêm vào giỏ">
                <strong>Thêm vào giỏ</strong>
                <span>Chọn ngay sản phẩm bạn yêu thích</span>
              </button>
              <button type="button" data-type="main-product-buy-now" class="main-product-buy-now" title="Mua ngay">
                <strong>Mua ngay</strong>
                <span>Thanh toán nhanh sản phẩm này</span>
              </button>
            {%- else -%}
              <button type="button" data-type="main-product-add" disabled title="Tạm hết hàng">
                <strong>Tạm hết hàng</strong>
                <span>Liên hệ để được tư vấn thêm</span>
              </button>
            {%- endif -%}
          </div>
          <div class="product-deliverly mb-0">
            <div class="deliverly-inner">
              <div class="m-0 infoList-deliverly">
                <div class="deliverly-item">
                  <span>
                    <img
                      loading="lazy"
                      decoding="async"
                      src="//theme.hstatic.net/1000141988/1001377521/14/product_deliverly_1_ico.png?v=410"
                      alt="Giao Hàng Nội Thành 4 Giờ"
                      width="30"
                      height="30"
                    >
                  </span>
                  Giao Hàng Nội Thành 4 Giờ
                </div>
                <div class="deliverly-item">
                  <span>
                    <img
                      loading="lazy"
                      decoding="async"
                      src="//theme.hstatic.net/1000141988/1001377521/14/product_deliverly_2_ico.png?v=410"
                      alt="Giao Hàng Toàn Quốc Với Thực Phẩm Khô"
                      width="30"
                      height="30"
                    >
                  </span>
                  Giao Hàng Toàn Quốc Với Thực Phẩm Khô
                </div>
                <div class="deliverly-item">
                  <span>
                    <img
                      loading="lazy"
                      decoding="async"
                      src="//theme.hstatic.net/1000141988/1001377521/14/product_deliverly_3_ico.png?v=410"
                      alt="Kiểm Tra Nhận Hàng"
                      width="30"
                      height="30"
                    >
                  </span>
                  Kiểm Tra Nhận Hàng
                </div>
                <div class="deliverly-item">
                  <span>
                    <img
                      loading="lazy"
                      decoding="async"
                      src="//theme.hstatic.net/1000141988/1001377521/14/product_deliverly_4_ico.png?v=410"
                      alt="Đổi trả trong 48 giờ nếu sản phẩm không đạt chất lượng cam kết"
                      width="30"
                      height="30"
                    >
                  </span>
                  Đổi trả trong 48 giờ nếu sản phẩm không đạt chất lượng cam kết
                </div>
              </div>
            </div>
          </div>
        {%- endif -%}
      </div>
    </div>

    <div class="main-product-description inSidebar">
      <div class="main-product-description-items">
        <div class="main-product-description-item active" data-type="des">
          <span class="main-product-description-item-head">Mô tả sản phẩm</span>
          <div class="main-product-description-item-data-wrap">
            <div class="main-product-description-item-data">
              {%- if product.description != null and product.description != '' -%}
                {{
